<p id="notice"><%= notice %></p>


<h3><%= @aim.swimmer.first_last %>'s Aims</h3>

<h1>
  <%= @aim.qualification.name %>
</h1>

<p>
  <b>By Date:</b>
  <%= @aim.date %>
</p>

<% if can? :update, @aim %>
  <%= link_to 'Edit', edit_aim_path(@aim) %> |
<% end %>
<% if can? :destroy, @aim %>
  <%= link_to 'Delete', @aim, :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'Back', @aim.swimmer %>
