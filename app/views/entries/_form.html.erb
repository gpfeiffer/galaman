<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :event_id %>
  <%= f.hidden_field :registration_id %>
  <%= f.hidden_field :relay_id %>
 
  <h2><%= @entry.event.competition.name %></h2>
  <h3><%= @entry.event.discipline.name %></h3>

  <h1><%= @entry.name %> (<%= @entry.club.symbol %>)</h1>

  <div class="field">
    <%= f.label :time, "Seed Time" %>
    <%= f.text_field :mins, :size => 2 %>:<%= f.text_field :secs, :size => 2 %>.<%= f.text_field :centis, :size => 2 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
