<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
  <tr>
    <th></th>
    <% (0..10).each do |i| %>
      <th><%= i %></th>
    <% end %>
  </tr>
  <% colors = ["lightgreen", "lightblue"] %>
  <% Survey::COMPONENTS.each_with_index do |component, index| %>
    <%= content_tag :tr, :style => "background: #{colors[index % 2]}", :title => component[:description] do %>
      <td style="text-align: right;"><%= f.label component[:name] %></td>
      <% (0..10).each do |scale| %>
        <td><%= f.radio_button component[:name], scale %></td>
      <% end %>
    <% end %>
  <% end %>
  <tr>
   <th></th>
   <% (0..10).each do |i| %>
     <th><%= i %></th>
   <% end %>
  </tr>
</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
