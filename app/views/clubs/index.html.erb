<h1>Clubs</h1>

<table>
<% @clubs.each do |club| %>
  <tr>
    <td><%= link_to club.name, club %></td>
    <td><%= link_to image_tag('delete.png', :class => "icon"), club, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

