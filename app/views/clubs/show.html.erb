<p id="notice"><%= notice %></p>

<h2>
  <%= @club.full_name %>
  (<%= @club.symbol %>)
</h2>

<p>
  <b>Contact:</b>
  <%= @club.contact %>
</p>

<p>
  <b>Email:</b>
  <%= @club.email %>
</p>
<hr/>

<h2>Swimmers.</h2>
<table>
<%= render @club.swimmers %>
</table>
<br />
<hr />

<% if session[:edit] %>
<%= link_to 'New Swimmer', new_swimmer_path(:club_id => @club) %>
<hr/>
<% end %>

<h2>Invitations.</h2>
<ul>
<%= render @club.invitations.sort_by { |x| x.competition.date }.reverse %>
</ul>
<hr/>

<% if session[:edit] %>
<%= link_to 'Edit', edit_club_path(@club) %> |
<% end %>
<%= link_to 'Back', clubs_path %>
<br />
<br />
