<h1>Competitions</h1>

<% @competitions_by_season.reverse_each do |season, competitions| %>

<h2><%= season %></h2>

<table class="fact-sheet">
<% competitions.reverse_each do |competition| %>
  <tr class="fact-major">
    <td><%= competition.date %></td>
    <td><%= link_to competition.name, competition %>
    (<%= competition.location %>)</td>
  </tr>
<% end %>
</table>

<br />

<% end %>
<hr />

<% if can? :create, Competition %>
  <%= link_to 'New Competition', new_competition_path %>
<% end %>
