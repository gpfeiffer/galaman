<h3>Events</h3>

<table>
  <tr>
    <th>No.</th>
    <th>Discipline</th>
    <th>Age</th>
    <th></th>
  </tr>

<% @competition.events.each do |event| %>
  <tr>
    <td align="right"><%= event.pos %></td>
    <td><%= link_to event.discipline.name, event %></td>
    <td><%= event.age_min %> - <%= event.age_max %></td>
    <td><%= link_to image_tag('delete.png', :class => "icon"), event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path(:competition_id => @competition) %>
