<h3>Participating Clubs</h3>

<table class="fact-sheet">

<% @competition.invitations.each do |invitation| %>
  <tr class="fact-major">
    <td><%= link_to invitation.club.name, invitation %></td>
<td align="right"><%= invitation.registrations.count %> swimmers in</td>
<td align="right"><%= invitation.registrations.map { |x| x.entries.count }.sum %> events</td>
    <td><%= link_to image_tag('delete.png', :class => "icon"), invitation, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'Invite Team', new_invitation_path(:competition_id => @competition) %>
