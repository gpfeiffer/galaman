<% content_for :level do %>
  <h3><%= @registration.invitation.club %></h3>
  <% @registration.invitation.registrations.group_by(&:gender).each do |gender, registrations| %>
    <h4><%= { 'f' => 'Girls', 'm' => 'Boys' }[gender] %></h4>
    <ul><%= render registrations %></ul>
  <% end %>
<% end %>


<h3><%= link_to @registration.competition.name, @registration.competition %> (<%= @registration.competition.location %>, <%= @registration.competition.date %>)</h3>
<h1><%= link_to @registration.swimmer.name, @registration.swimmer %> (<%= link_to @registration.club.symbol, @registration.invitation %>)</h1>

<div>
  <b>Age (F/M):</b>
  <%= @registration.age %> (<%= @registration.swimmer.gender.upcase %>),
  <b>ID:</b>
  <%= @registration.swimmer.registration %>.
<div>
<br />
<br />

<table class="fact-sheet">
  <tr class="times-major">
    <th></th>
    <th>Event</th>
    <th>Plc</th>
    <th>Result</th>
    <th>PB</th>
    <th>(Seed)</th>
  </tr>
  <% nr_swims, nr_pbs = 0, 0 %>
  <% @registration.entries.sort_by { |x| x.event.pos }.each do |entry| %>
    <tr class="times-major">
      <th><%= link_to entry.event.pos, entry.event %>.</th>
      <th><%= link_to entry.discipline.nickname, results_path(:discipline_id => entry.discipline.id, :swimmer_id => @registration.swimmer.id) %></th>
      <td style="text-align: right;"><%= "#{entry.result.place}." if entry.result and entry.result.place %></td>
      <td style="text-align: right;">
        <% if entry.result %>
          <% nr_swims += 1 %>
          <%= link_to entry.result, entry.result %>
        <% else %>
          <%= link_to '__:__.__', new_result_path(:entry_id => entry.id) %>
        <% end %>
      </td>
      <td>
        <% if entry.result %>
	  <% if entry.result.personal_best? %>
            <% nr_pbs += 1%>
	    <%= '*' %>
          <% end %>
	<% end %>
      </td>
      <td style="text-align: right;">(<%= entry %>)</td>
    </tr>
  <% end %>
</table>
<% if nr_swims > 0 %>
<p><%= nr_swims %> Results (<%= "%.2f" % [100.0 * nr_pbs/nr_swims] %>% PB) </p>
<% end %>
<hr>
<% if user_session[:edit] %>
<%= link_to 'Edit', edit_registration_path(@registration) %> |
<% end %>
<%= link_to 'Back', @registration.invitation %>
