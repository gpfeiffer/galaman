<p id="notice"><%= notice %></p>

<h2><%= @discipline %></h2>

<p>
  <b>Gender:</b>
  <%= @discipline.gender %>
</p>

<p>
  <b>Distance:</b>
  <%= @discipline.distance %>
</p>

<p>
  <b>Course:</b>
  <%= @discipline.course %>
</p>

<p>
  <b>Stroke:</b>
  <%= @discipline.stroke %>
</p>

<p>
  <b>Mode:</b>
  <%= @discipline.mode %>
</p>

<% r = @discipline.sample_result %>
<% if r %>
<p>
  <b>Sample:</b>
  <%= r %> (<%= r.entry.swimmer.first_last %>, <%= r.entry.club.symbol %>, <%= r.entry.event.competition.date %>)
</p>
<% end %>

<% @qts_by_qualification.each do |qualification, times| %>
<h3><%= link_to qualification.name, qualification_times_path(:qualification_id => qualification, :discipline_id => @discipline) %></h3>
<table class="fact-sheet">
  <% times.sort_by(&:age_min).each do |time| %>
<tr class="times-major">
   <th align="right"><%= ages_to_words(time.age_range) %>: </th>
   <td align="right"><%= time %></td>
</tr>
  <% end %>
</table>
<% end %>

<hr />
<% if session[:edit] %>
<%= link_to 'Edit', edit_discipline_path(@discipline) %> |
<%= link_to 'Destroy', @discipline, :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'Back', disciplines_path %>
