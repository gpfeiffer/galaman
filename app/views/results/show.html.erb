<h3><%= link_to @result.competition.name, @result.competition %> (<%= @result.competition.location %>, <%= @result.competition.date %>)</h3>
<h1><%= link_to @result.swimmer.name, @result.registration %> (<%= link_to @result.registration.club.symbol, @result.entry.invitation %>)</h1>

<div>
  <b>Age (F/M):</b>
  <%= @result.registration.age %> (<%= @result.swimmer.gender.upcase %>),
  <b>ID:</b>
  <%= @result.swimmer.registration %>.
<div>
<br>
<br>

<table class="fact-sheet">
  <tr class="times-major">
    <th></th>
    <th>Event</th>
    <th>Plc</th>
    <th>Result</th>
    <th>(Seed)</th>
  </tr>
  <% entry = @result.entry %>
  <tr class="times-major">
    <th><%= link_to entry.event.pos, entry.event %>.</th>
    <th><%= entry.discipline.nickname %></th>
    <td style="text-align: right;"><%= "#{entry.result.place}." if entry.result.place %></td>
    <td style="text-align: right;">
      <%= link_to(entry.result, results_path(:discipline_id => entry.discipline.id, :swimmer_id => @result.swimmer.id)) if entry.result %>
    </td>
    <td style="text-align: right;">(<%= entry %>)</td>
  </tr>
</table>
<hr>

<% if user_session[:edit] %>
<%= link_to 'Edit', edit_result_path(@result) %> |
<%= link_to 'Destroy', @result, :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'Back', @result.entry.event %>
