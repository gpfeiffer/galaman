<%= render 'events/navigation' %>

<h2>Heats.</h2>

<table class="fact-sheet">
<tr class="fact-major">
<th>Heat</th>
<th>Lane</th>
<th>Name</th>
<th>Age</th>
<th>Team</th>
<th>Seed Time</th>
<th>Result</th>
</tr>

<% @heats.each do |heat| %>
  <tr class="fact-title">
    <th colspan="7">Heat <%= heat.pos %></th>
  </tr>

  <%= render heat.entries.sort_by(&:lane) %>
<% end %>
</table>

<br />

<h2>Lanes.</h2>

<table class="fact-sheet">
<tr class="fact-major">
<th>Heat</th>
<th>Lane</th>
<th>Name</th>
<th>Age</th>
<th>Team</th>
<th>Seed Time</th>
<th>Result</th>
</tr>

<% @lanes.each do |lane| %>
  <tr class="fact-title">
    <th colspan="7">Lane <%= lane %></th>
  </tr>

  <%= render @event.entries.where(:lane => lane).sort_by { |x| x.heat.pos } %>
<% end %>
</table>

<br />
<hr />

