<p id="notice"><%= notice %></p>

<h1>Event <%= @event.pos %>: <%= @event.discipline.name %></h1>

<table class="fact-sheet">
<tr class="fact-major">
<th>Heat</th>
<th>Lane</th>
<th>Name</th>
<th>Age</th>
<th>Team</th>
<th>Seed Time</th>
<th>Result</th>
</tr>

<% @heats.each do |heat| %>
  <tr class="fact-title">
    <th colspan="7">Heat <%= heat.pos %></th>
  </tr>

  <%= render heat.entries.sort_by(&:lane) %>
<% end %>
</table>

<br />

<table class="fact-sheet">
<tr class="fact-major">
<th>Heat</th>
<th>Lane</th>
<th>Name</th>
<th>Age</th>
<th>Team</th>
<th>Seed Time</th>
<th>Result</th>
</tr>

<% @lanes.each do |lane| %>
  <tr class="fact-title">
    <th colspan="7">Lane <%= lane %></th>
  </tr>

  <%= render @event.entries.where(:lane => lane).sort_by { |x| x.heat.pos } %>
<% end %>
</table>

<br />
<hr />

<%= link_to 'Entries', @event %> |
<%= link_to 'Heats', heats_path(:event_id => @event) %> |
<%= link_to 'Results', results_path(:event_id => @event) %> |
<%= link_to 'Back', @event.competition %>
