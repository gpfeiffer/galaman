<!DOCTYPE html>
<html>
<head>
  <title>GalaMan</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag "scaffold", :media => "all" %>
  <%= stylesheet_link_tag "galaman", :media => "all" %>
  <%= stylesheet_link_tag "print", :media => "print" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "d3.v2" %>
  <%= csrf_meta_tag %>
</head>
<body id="manager">
<div id="banner">
<div id="logo">
  <%= link_to "GalaManager", root_path %> 
</div>
<div id="admin">
  <% if user_signed_in? %>
  <% user = current_user %>
    <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, :confirm => "Sign out?" %> 
    (logged in as <%= link_to user, user %>)
  <% else %>
    <%= link_to "Sign in", new_user_session_path %>
  <% end %>
</div>
</div>
<div id="columns">
  <div id="side">
    <%= link_to "Clubs", clubs_path %><br/>
    <%= link_to "Competitions", competitions_path %><br/>
    <%= link_to "Disciplines", disciplines_path %><br/>
    <%= link_to "Qualifications", qualifications_path %><br/>
    <br/>
  <% if user_signed_in? %>
<% if user.role? :admin %>
<div id="editview">
<% if user_session[:edit] %>
 <%= button_to 'View', root_path(:edit => false), :remote => true %>
<% else %>
 <%= button_to 'Edit', root_path(:edit => true), :remote => true %>
 <% end %>
</div>
<% end %>
<% end %>
  </div>
  <div id="main">
    <%= yield %>
<br /><br />
  </div>
</div>
</body>
</html>
