<!DOCTYPE html>
<html>
<head>
  <title>Galaman</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag "scaffold", :media => "all" %>
  <%= stylesheet_link_tag "galaman", :media => "all" %>
  <%= stylesheet_link_tag "print", :media => "print" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="manager">
<div id="banner">
  <%= @page_title || "Gala Manager" %>
  <div id="admin">
  </div>
</div>
<div id="columns">
  <div id="side">
    <%= link_to "Home", home_path %><br/>
    <%= link_to "Clubs", clubs_path %><br/>
    <%= link_to "Competitions", competitions_path %><br/>
    <%= link_to "Qualifications", qualifications_path %><br/>
    <br/>
    <% if session[:user_id] %>
      <% user = User.find(session[:user_id]) %>
      <%= link_to 'Logout', logout_path, :method => :delete %>
	  (logged in as <%= link_to user.name, user %>)<br/>
        <% if session[:admin] %>
        <% if session[:edit] %>
          Edit mode (click to <%= link_to 'View', view_path %>)
        <% else %>
          View mode (click to <%= link_to 'Edit', edit_path %>)
        <% end %><br/>
        <% end %>
    <% else %>
    <%= link_to "Login", login_path %><br/>
    <% end %>
  </div>
  <div id="main">
    <%= yield %>
<br /><br />
  </div>
</div>
</body>
</html>
