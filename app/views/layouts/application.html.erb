<!DOCTYPE html>
<html>
<head>
  <title>Galaman</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag "scaffold", :media => "all" %>
  <%= stylesheet_link_tag "galaman", :media => "all" %>
  <%= stylesheet_link_tag "print", :media => "print" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "d3.v2" %>
  <%= csrf_meta_tag %>
</head>
<body id="manager">
<div id="banner">
  <%= @page_title || "Gala Manager" %>
  <div id="admin">
  </div>
</div>
<div id="columns">
  <div id="side">
    <%= link_to "Home", root_path %><br/>
    <%= link_to "Clubs", clubs_path %><br/>
    <%= link_to "Competitions", competitions_path %><br/>
    <%= link_to "Disciplines", disciplines_path %><br/>
    <%= link_to "Qualifications", qualifications_path %><br/>
    <br/>
    <% if user_signed_in? %>
      <% user = current_user %>
        <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, :confirm => "Sign out?" %> 
	  (logged in as <%= link_to user.name, user %>)<br/>
    <% else %>
    <%= link_to "Sign in", new_user_session_path %><br/>
    <% end %>
  </div>
  <div id="main">
    <%= yield %>
<br /><br />
  </div>
</div>
</body>
</html>
