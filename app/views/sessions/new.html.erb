<% if flash[:alert] %>
 <p id="notice"><%= flash[:alert] %></p>
<% end%>

<%= form_tag do %>
  <fieldset>
    <legend>Please Log In</legend>

<table>
  <tr> 
    <td align="right">
      <label for="name">Name:</label>
    </td>
    <td>
      <%= text_field_tag :name, params[:name] %>
    </td>
  </tr>
  <tr>
    <td align="right">
      <label for="password">Password:</label>
    </td>
    <td>
      <%= password_field_tag :password, params[:password] %>
    </td>
  </tr>
  <tr>
    <td>
    </td>
    <td>
      <%= submit_tag "Login" %>
    </td>
  </tr>
</table>
  </fieldset>
<% end %>

<% 25.times do %>
  <br />
<% end %>
