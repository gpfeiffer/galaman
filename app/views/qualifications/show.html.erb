<p id="notice"><%= notice %></p>

<h3><%= link_to 'Qualifications', qualifications_path %></h3>

<h1>
  <%= @qualification.name %> Times
</h1>

<hr />
<%= render 'qualification_times' %>
<hr />

<br/>
<br/>

<% @qualification.genders.each do |gender| %>
  <% @qualification.age_ranges(gender).each do |ages| %>
    <% table = @qualification.to_table(gender, ages.first) %>
    <% if table %>
    <h3>
      <%= table[:title] %> (<%= ages_to_words(ages) %>)
    </h3>

    <table class="fact-sheet">
      <tr class="times-major">
        <th></th>
        <% table[:heads].each do |head| %>
          <th style="width:80px">
            <%= truncate(head, :length => 9) %>
          </th>
        <% end %>
      </tr>
      <% table[:body].each do |row| %>
        <tr class="times-major">
          <th>
            <%= row[:label] %>
          </th>
          <% row[:list].each do |qt| %>
            <td align="right" <%= raw ', title="' + "#{qt.fina_points}" + '"' if qt %>><%= qt %></td>
          <% end %>
        <tr>
      <% end %>
    </table>
    <% end%>
  <% end %>
<% end %>

<br />
<hr />

<% if can? :update, @qualification %>
  <%= link_to 'Edit', edit_qualification_path(@qualification) %> |
<% end %>
<% if can? :destroy, @qualification %>
  <%= link_to 'Destroy', @qualification, :confirm => 'Are you sure?', :method => :delete  %> |
<% end %>
<%= link_to 'Back', qualifications_path %>
