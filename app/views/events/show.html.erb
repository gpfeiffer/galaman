<p id="notice"><%= notice %></p>

<h3>
  <%= @event.competition.name %>
(<%= @event.competition.date %>,
<%= @event.competition.location %>)
</h3>

<h1>
  Event <%= @event.pos %>.
  <%= @event.discipline.to_words %>
</h1>
<h4>
  <%= ages_to_words(@event.age_range) %>
</h4>

<h2>Entries.</h2>

<table class="fact-sheet">
<tr class="fact-major">
<th></th>
<th>Name</th>
<th>Age</th>
<th>Team</th>
<th>Seed Time</th>
<th>Result</th>
</tr>
<% @event.seeded_entries.each_with_index do |entry, index| %>
  <%= render :partial => 'events/entry', :object => entry, :locals => { :index => index } %>
<% end %>
</table>

<br />

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Seed', new_heat_path(:event_id => @event) %> |
<%= link_to 'Sort', list_event_path(@event), :confirm => 'Are you sure?' %> 

<br />
<hr />

<%= render 'navigation' %>
