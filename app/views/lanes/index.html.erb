<p id="notice"><%= notice %></p>

<h3>
  <%= @event.competition.name %>
(<%= @event.competition.date %>,
<%= @event.competition.location %>)
</h3>

<h1>
  Event <%= @event.pos %>.
  <%= @event.discipline.to_words %>
</h1>
<h4>
  <%= ages_to_words(@event.age_range) %>
</h4>

<h2>Lanes.</h2>

<%# form_for :result, :url => update_event_path(@event) do %>
<table class="fact-sheet">
<tr class="fact-major">
<th>Heat</th>
<th>Lane</th>
<th>Name</th>
<th>Age</th>
<th>Team</th>
<th>Seed Time</th>
<th>Result</th>
</tr>

<% @lanes.each_with_index do |lane, index| %>
<% if not lane.blank? %>
  <tr class="fact-title">
    <th colspan="7">Lane <%= index %></th>
  </tr>
<%= render :partial => 'entry', :collection => lane.sort_by { |x| x.heat.pos } %>
<% end %>
<% end %>
</table>
<%# submit_tag %>
<%# end %>

<br />
<hr />

<%= render 'events/navigation' %>
